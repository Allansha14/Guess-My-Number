def number_guessing_game():
    """
    This function runs a number guessing game.
    The user must guess a randomly generated number between 1 and 100.
    The user gets a maximum of 7 attempts.
    """

    # Import random module to generate a random number
    import random

    # Print welcome message
    print('Welcome to Number Guessing Game !!!')
    print('Guess the number between 1 and 100')

    # Generate a random secret number between 1 and 100
    secret_number = random.randint(1, 100)

    # Loop runs for maximum of 7 attempts
    for attempt in range(1, 8):

        try:
            # Ask user to enter a number and convert it to integer
            user_input = int(input(f"Attempt {attempt}: Enter your guess: "))

            # Check if number is outside valid range
            if user_input < 1 or user_input > 100:
                print("Invalid number! Please enter a number between 1 and 100.")

            # Check if guess is greater than secret number
            elif user_input > secret_number:
                print("Your number is greater than the secret number.")

            # Check if guess is less than secret number
            elif user_input < secret_number:
                print("Your number is less than the secret number.")

            # If guess is correct
            else:
                print("ğŸ‰ Congratulations! You guessed the correct number.")
                print(f"It took you {attempt} attempts to guess the number.")
                return  # Exit the function after winning

        # Handle non-numeric input (like characters or symbols)
        except ValueError:
            print("Invalid input! Please enter numbers only.")

    # This runs if user fails all 7 attempts
    print("âŒ Sorry, you've used all attempts.")
    print(f"The secret number was: {secret_number}")


# Call the function to start the game
number_guessing_game()
